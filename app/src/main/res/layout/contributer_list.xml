<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:background="#2e2e2e"
    android:id="@+id/contributer"
    >
<androidx.cardview.widget.CardView
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_centerVertical="true"
    android:layout_marginLeft="15dp"
    android:padding="10dp"
    android:id="@+id/contributerCard"
    app:cardCornerRadius="20dp">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/nodata_icon"
        android:id="@+id/contributerPic"
        />
</androidx.cardview.widget.CardView>
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@id/contributerCard"
    android:text="Name"
    android:textSize="15sp"
    android:fontFamily="sans-serif-black"
    android:textColor="#FFFFFF"
    android:id="@+id/contributerName"
    android:paddingTop="20dp"
    android:paddingLeft="15dp"/>
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@id/contributerCard"
    android:layout_below="@id/contributerName"
    android:text="Type"
    android:textSize="10dp"
    android:fontFamily="sans-serif"
    android:textColor="#FFFFFF"
    android:paddingLeft="15dp"
    android:id="@+id/contributerType"
    />
</RelativeLayout>

